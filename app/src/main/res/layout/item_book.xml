<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:layout_height="200dp"
    android:background="@drawable/item_book_bg">

    <TextView
        android:id="@+id/tv_item_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认账本"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/tv_item_book_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_book_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="这是默认账本这是默认账本"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tv_item_current_book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_book_name" />

    <TextView
        android:id="@+id/tv_item_current_book"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/item_book_current_bg"
        android:gravity="center"
        android:text="当前账本"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>