    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/global_background_gray">

        <View
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/corner_all_25dp_blue_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--内容1-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_content1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="@id/bg"
            app:layout_constraintStart_toStartOf="@id/bg"
            app:layout_constraintTop_toTopOf="@id/bg">


            <TextView
                android:id="@+id/tv_record_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_all_5dp_gray_bg"
                android:text="支出"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/slash"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.592" />

            <TextView
                android:id="@+id/slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="/"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_record_type"
                app:layout_constraintEnd_toStartOf="@id/tv_asset"
                app:layout_constraintStart_toEndOf="@id/tv_record_type" />

            <TextView
                android:id="@+id/tv_asset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_all_5dp_gray_bg"
                android:text="不计入资产"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/slash"
                app:layout_constraintStart_toEndOf="@id/slash" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_all_5dp_record_stroke"
                android:gravity="end"
                android:padding="5dp"
                android:hint="￥00.00"
                android:textColor="@color/outcome"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--分割线-->
        <life.chenshi.keepaccounts.common.view.TicketDivideLineView
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:background="@color/white"
            app:dashHeight="1.5dp"
            app:dashInterval="2dp"
            app:dashWidth="3dp"
            app:layout_constraintEnd_toEndOf="@id/cl_content1"
            app:layout_constraintStart_toStartOf="@id/cl_content1"
            app:layout_constraintTop_toBottomOf="@id/cl_content1" />

        <!--内容2-->

        <!--分割线-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_content2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/cl_content1"
            app:layout_constraintStart_toStartOf="@id/cl_content1"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <TextView
                android:id="@+id/tv_datetime_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_all_5dp_gray_bg"
                android:text="2020/02/31 - 08:10"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_datetime_title" />

            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账本"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
