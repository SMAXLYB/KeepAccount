                android:tag="5"
                android:text="5" />

            <TextView
                android:id="@+id/tv_7"
                style="@style/CustomKeyBoard"
                android:tag="6"
                android:text="6" />

            <!--       <TextView
                       android:id="@+id/tv_8"
                       style="@style/CustomKeyBoard"
                       android:tag="add"
                       android:text="+" />-->

            <TextView
                android:id="@+id/tv_9"
                style="@style/CustomKeyBoard"
                android:tag="7"
                android:text="7" />

            <TextView
                android:id="@+id/tv_10"
                style="@style/CustomKeyBoard"
                android:tag="8"
                android:text="8" />

            <TextView
                android:id="@+id/tv_11"
                style="@style/CustomKeyBoard"
                android:tag="9"
                android:text="9" />

            <!-- <TextView
                 android:id="@+id/tv_12"
                 style="@style/CustomKeyBoard"
                 android:tag="minus"
                 android:text="-" />-->

            <TextView
                android:id="@+id/tv_13"
                style="@style/CustomKeyBoard"
                android:tag="dot"
                android:text="." />

            <TextView
                android:id="@+id/tv_14"
                style="@style/CustomKeyBoard"
                android:tag="0"
                android:text="0" />

            <ImageView
                android:id="@+id/iv_delete"
                android:padding="15dp"
                android:src="@drawable/new_record_keyboard_delete"
                style="@style/CustomKeyBoard"
                android:tag="delete" />

            <TextView
                android:id="@+id/tv_16"
                style="@style/CustomKeyBoard"
                android:background="@color/colorPrimary"
                android:tag="save"
                android:text="保存"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="h,2:2.4"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


