<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A4F1F1F1"
        android:orientation="vertical">

        <!--收支类型切换-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/new_record_type_outcome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/new_record_outcome_bg"
                android:enabled="false"
                android:gravity="center"
                android:text="支出"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_record_type_income"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/new_record_income_bg"
                android:gravity="center"
                android:text="收入"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/new_record_date_time_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/new_record_money_container"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="时间"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    app:cardMaxElevation="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/new_record_date"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="1990-01-01"
                            app:layout_constraintBottom_toTopOf="@id/new_record_time"
                            app:layout_constraintEnd_toStartOf="@id/new_record_date_arrow"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/new_record_date_arrow"
                            android:layout_width="7dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="3dp"
                            android:src="@drawable/index_arrow_down_gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/new_record_date"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/new_record_time"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="00:00"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/new_record_time_arrow"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/new_record_date" />

                        <ImageView
                            android:id="@+id/new_record_time_arrow"
                            android:layout_width="7dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="3dp"
                            android:src="@drawable/index_arrow_down_gray"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/new_record_time" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_record_money_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/new_record_date_time_container"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="金额"

                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_money"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/new_record_edittext_bg"
                    android:gravity="center"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:maxLength="9"
                    android:textSize="22sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="类型"

            android:textSize="16sp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/new_record_label_container_outcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/new_record_label_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_record_label"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="购物"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/new_record_label_1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/new_record_label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_record_label"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="吃饭"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/new_record_label_2"
                app:layout_constraintStart_toEndOf="@id/new_record_label_0"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/new_record_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_record_label"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"

                android:text="交通"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/new_record_label_3"
                app:layout_constraintStart_toEndOf="@id/new_record_label_1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/new_record_label_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_record_label"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"

                android:text="医疗"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/new_record_label_4"
                app:layout_constraintStart_toEndOf="@id/new_record_label_2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/new_record_label_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_record_label"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"

                android:paddingBottom="5dp"
                android:text="住房"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/new_record_label_5"
                app:layout_constraintStart_toEndOf="@id/new_record_label_3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/new_record_label_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_record_label"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"

                android:text="通讯"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/new_record_label_4"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/new_record_label_container_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/new_record_label_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_record_label"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="工资"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/new_record_label_7"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/new_record_label_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_record_label"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="红包"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/new_record_label_8"
                app:layout_constraintStart_toEndOf="@id/new_record_label_6"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/new_record_label_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_record_label"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"

                android:text="基金"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/new_record_label_9"
                app:layout_constraintStart_toEndOf="@id/new_record_label_7"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/new_record_label_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_record_label"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"

                android:text="兼职"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/new_record_label_10"
                app:layout_constraintStart_toEndOf="@id/new_record_label_8"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/new_record_label_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_record_label"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"

                android:paddingBottom="5dp"
                android:text="利息"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/new_record_label_9"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="备注"

            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/new_record_edittext_bg"
            android:gravity="top"
            android:hint="请输入50字备注（非必填）"

            android:maxLength="50"
            android:padding="5dp"
            android:textSize="14sp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_submit"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:background="@drawable/new_record_submit_bg"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_cancel"
                android:layout_height="40dp"
                android:text="提交" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/btn_submit"
                android:layout_width="0dp"
                android:background="@drawable/new_record_cancel_bg"
                android:layout_height="40dp"
                android:text="取消" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</layout>