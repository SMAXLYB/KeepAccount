<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--   ================BottomSheet================== -->
    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <!--背景，顶部两个圆角-->
        <item name="android:background">@drawable/corner_top_12dp_white_bg</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--   ================Divider================== -->
    <style name="IncludeDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <!--   ================Setting================== -->
    <style name="SettingCardView">
        <item name="contentPaddingTop">5dp</item>
        <item name="contentPaddingBottom">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardMaxElevation">2dp</item>
    </style>

    <style name="SettingItemLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SettingItemContentTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingArrow">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/analyze_arrow_more</item>
    </style>

    <style name="NewRecordArrow">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:src">@drawable/analyze_arrow_more</item>
    </style>
</resources>