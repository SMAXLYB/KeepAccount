<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <!--边框宽度-->
        <attr name="borderWidths" format="integer" />
        <!--边框颜色-->
        <attr name="borderColor" format="color" />
        <!--是否有阴影-->
        <attr name="showShadow" format="boolean" />
        <!--阴影颜色-->
        <attr name="shadowColor" format="color" />
        <!--阴影模糊半径-->
        <attr name="shadowRadius" format="float" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <!--未选中的背景颜色-->
        <attr name="uncheckedBackgroundColor" format="color" />
        <!--未选中的圆形颜色-->
        <attr name="uncheckedCircleColor" format="color" />

        <!--选中的背景颜色-->
        <attr name="checkedBackgroundColor" format="color" />
        <!--选中的圆形颜色-->
        <attr name="checkedCircleColor" format="color" />

        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>
</resources>