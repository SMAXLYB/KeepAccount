<resources xmlns:tools="http://schemas.android.com/tools">
    <!--标准activity-->
    <style name="common_Theme.KeepAccounts" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">#03A9F4</item>
        <!-- 主色调的深色、浅色 -->
        <item name="colorPrimaryVariant">#03A9F4</item>
        <!-- 主色调的前景色 -->
        <item name="colorOnPrimary">#CDDC39</item>
        <!-- 次色调 -->
        <item name="colorSecondary">@color/common_teal_200</item>
        <!-- 次色调的深色、浅色-->
        <item name="colorSecondaryVariant">@color/common_teal_700</item>
        <!-- 次色调的前景色 -->
        <item name="colorOnSecondary">@color/common_black</item>
        <!-- 状态栏 -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!--app启动页-->
    <style name="common_LaunchTheme" parent="common_Theme.KeepAccounts">
        <item name="android:windowBackground">@drawable/common_launch_layout</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>