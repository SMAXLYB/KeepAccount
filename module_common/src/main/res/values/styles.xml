<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--   ================BottomSheet================== -->
    <style name="CommonBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <!--背景，顶部两个圆角-->
        <item name="android:background">@drawable/common_corner_top_12dp_white_bg</item>
    </style>

    <style name="CommonBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <!--底部弹出条的样式（相当于背景）-->
        <item name="bottomSheetStyle">@style/CommonBottomSheet</item>
        <!--状态栏颜色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--导航条颜色-->
        <item name="android:navigationBarColor">@color/common_white</item>
    </style>

    <!--   ================Divider================== -->
    <style name="CommonIncludeDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="CommonWindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>